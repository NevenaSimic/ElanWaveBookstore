
@{
    ViewBag.Title = "_LogLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("scripts", required: false)
    <style>
        html {
            min-height: 100%;
            position: relative;
            border: 1px solid;
            margin-bottom: 0;
            margin-top: 0
        }

        body {
            height: 100%;
            margin: 0 auto;
        }

        h1 {
            height: 100px;
            text-align: left;
            margin-top: 0;
            margin-bottom: 0;
            border-bottom: 1px solid;
        }

        footer {
            background-color: lightgray;
            position: absolute;
            border-top: 1px solid;
            border-bottom: 1px solid;
            width: 100%;
            height: 50px;
            bottom: 0px;
            right: 0px;
        }
    </style>
</head>
<body>
    <header style="background-color:lightgray; height:130px;border-bottom:1px solid">
        <div style="text-align:right;padding-top:10px;padding-right:10px">
                    <h5 style="font-weight: normal; padding-top:21px">
                        @if (Session["LogedUserName"] != null)
                        {
                            <text>Hello @Session["LogedUserName"].ToString()!</text>
                        }
                        <a href="" style="color:#555151">@Html.ActionLink("Log out!", "Logout", "Home")</a>
                    </h5>
        </div>

        <h2 font-weight:bold style="padding-left:15px" onclick="location.href='@Url.Action("Index", "Home")'">
            Elan<span style="color:orange">Wave</span> Bookstore
        </h2>
    </header>

    <div style="background-color:white">
        @RenderBody()
    </div>

    <footer>
        <p style="text-align:right; padding-right:10px">
            <a href="http://www.elanwave.com" style="color:#555151">
                www.elanwave.com
            </a>
        </p>
    </footer>
</body>
</html>




